---
import Use from "./Use.astro";
import WhyUs from "./WhyUs.astro";
import HowItWorks from "./HowItWorks.astro";
---

<div class="content">
	<Use />
	<WhyUs />
	<HowItWorks />
</div>

<style>
	.content {
		display: flex;
		flex-flow: column;
		gap: calc(var(--spacing) * 3);

		margin-top: calc(var(--spacing) * 3) 0px;
		padding: calc(var(--spacing) * 3);

		h2 {
			font-size: 2.5rem;
		}
	}
</style>
